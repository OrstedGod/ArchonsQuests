<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Фон -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/inazuma_back"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/darkOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40000000" />  <!-- ✅ 25% чёрный overlay -->

    <!-- Все остальные элементы -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="45dp">

            <TextView
                android:id="@+id/greetingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/oswald_medium"
                android:shadowColor="#888888"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <!-- Поле ввода дела -->
            <EditText
                android:id="@+id/taskInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Здесь введите задачу, Великий Сёгун!"
                android:fontFamily="@font/oswald_regular"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="15dp"
                android:padding="12dp"
                android:textColorHint="#49454d"
                android:inputType="textMultiLine"
                android:textSize="19sp"
                android:alpha="0.85"
                android:background="@android:drawable/edit_text" />

            <!-- Кнопки управления -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">

                <Button
                    android:id="@+id/addButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button"
                    android:textStyle="bold"
                    android:alpha="0.9"
                    android:textColor="#fae2f7"
                    android:text="Добавить задачу"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/deleteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:text="Удалить задачу"
                    android:textColor="#fae2f7"
                    android:background="@drawable/rounded_button"
                    android:alpha="0.9"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Кнопка "Пометить сделанными" -->
            <Button
                android:id="@+id/completeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Завершить задачу"
                android:textColor="#fae2f7"
                android:layout_marginHorizontal="55dp"
                android:textStyle="bold"
                android:background="@drawable/rounded_button"
                android:alpha="0.9"
                android:layout_marginBottom="16dp" />

            <!-- Контейнер для списка дел -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/tContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>
        </LinearLayout>
    </FrameLayout>

    <!-- Кнопка выхода -->
    <ImageButton
        android:id="@+id/logoutButton"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="end|top"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerInside"
        android:background="@drawable/exit" />
</FrameLayout>